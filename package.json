{
  "name": "babelgopher-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:server": "cd apps/server && go run main.go",
    "build:web": "pnpm --filter web build",
    "build:server": "cd apps/server && go build -o bin/server main.go",
    "test:server": "cd apps/server && go test ./...",
    "lint": "pnpm --filter web lint"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}
